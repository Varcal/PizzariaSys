
@{
    ViewBag.Title = "Consultar";
}

<h2>Consultar</h2>


@using (Html.BeginForm("ConsultaTelefone", "Cliente", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Digite o número do Telefone", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("telefone", new { htmlAttributes = new { @class = "form-control" } })            
        </div>
    </div>

    <p><input type="submit" value=" Consultar"/></p>
}